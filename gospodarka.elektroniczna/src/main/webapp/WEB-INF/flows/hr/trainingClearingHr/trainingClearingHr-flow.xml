<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" start-state="trainingClearingHrView"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Zabezpieczenie flow przez Spring Security -->
	<secured
		attributes="ROLE_HR, ROLE_MANUFACTURE, ROLE_FINANCE, ROLE_SERVIS, ROLE_STOREHOUSE, ROLE_ROOT"
		match="any" />

	<var name="controllerVar"
		class="gospodarka.elektroniczna.controllers.hr.TrainingClearingFlow" />

	<on-start>
		<evaluate expression="controllerVar.getTrainingClearings()"
			result="flowScope.trainingClearings" />
	</on-start>

	<view-state id="trainingClearingHrView">
		<transition on="trainingClearingHr" to="trainingClearingHr" />
	</view-state>
</flow>
