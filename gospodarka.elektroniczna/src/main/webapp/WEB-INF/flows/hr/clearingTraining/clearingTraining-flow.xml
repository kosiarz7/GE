<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" start-state="clearingTrainingView"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Zabezpieczenie flow przez Spring Security -->
	<secured
		attributes="ROLE_HR, ROLE_MANUFACTURE, ROLE_FINANCE, ROLE_SERVIS, ROLE_STOREHOUSE, ROLE_ROOT"
		match="any" />
		
	<var name="clearingTrainingVar" class="gospodarka.elektroniczna.dto.hr.ClearingTraining" />
	<var name="controllerVar" class="gospodarka.elektroniczna.controllers.hr.ClearingTrainingFlow" />
					
	<view-state id="clearingTrainingView">
		<transition on="clearingTraining" to="clearingTraining" />
	</view-state>

	<action-state id="clearingTraining">
		<evaluate expression="controllerVar.submit(clearingTrainingVar)"
			result="flowScope.status" />
		<transition to="clearingTrainingEnd" />
	</action-state>

	<end-state id="clearingTrainingEnd" view="clearingTrainingEnd.xhtml" />
</flow>
