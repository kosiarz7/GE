<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" start-state="businessTravelClearingHrView"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Zabezpieczenie flow przez Spring Security -->
	<secured attributes="ROLE_HR" />

	<var name="controllerVar"
		class="gospodarka.elektroniczna.controllers.hr.BusinessTravelClearingFlow" />

	<on-start>
		<evaluate expression="controllerVar.getBusinessTravelClearings()"
			result="flowScope.candidates" />
	</on-start>
	<view-state id="businessTravelClearingHrView">
		<transition on="businessTravelClearingHr" to="businessTravelClearingHr" />
	</view-state>

	<action-state id="businessTravelClearingHr">
		<evaluate expression="controllerVar.submit(businessTravelClearingVar)"
			result="flowScope.status" />
		<transition to="businessTravelClearingHrEnd" />
	</action-state>

	<end-state id="businessTravelClearingHrEnd" view="businessTravelClearingHrEnd.xhtml" />
</flow>
