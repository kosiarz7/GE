<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" start-state="sickLeaveView"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Zabezpieczenie flow przez Spring Security -->
	<secured
		attributes="ROLE_HR, ROLE_MANUFACTURE, ROLE_FINANCE, ROLE_SERVIS, ROLE_STOREHOUSE, ROLE_ROOT"
		match="any" />

	<var name="sickLeaveVar" class="gospodarka.elektroniczna.dto.hr.SickLeave" />

	<view-state id="sickLeaveView">
		<transition on="sickLeave" to="sickLeave" />
	</view-state>

	<action-state id="sickLeave">
		<evaluate expression="controllerVar.submitSickLeave(springSecurityContextUtilBean.getUser(), sickLeaveVar)"
			result="flowScope.status" />
		<transition to="sickLeaveEnd" />
	</action-state>

	<end-state id="sickLeaveEnd" view="sickLeaveEnd.xhtml" />
	<bean-import resource="flow-beans.xml" />
</flow>
