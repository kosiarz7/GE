<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" start-state="clearingBusinessTravelView"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Zabezpieczenie flow przez Spring Security -->
	<secured
		attributes="ROLE_HR, ROLE_MANUFACTURE, ROLE_FINANCE, ROLE_SERVIS, ROLE_STOREHOUSE, ROLE_ROOT"
		match="any" />
		
	<var name="clearingBusinessTravelVar" class="gospodarka.elektroniczna.dto.hr.ClearingBusinessTravel" />
	<var name="controllerVar" class="gospodarka.elektroniczna.controllers.hr.ClearingBusinessTravelFlow" />
					
	<view-state id="clearingBusinessTravelView">
		<transition on="clearingBusinessTravel" to="clearingBusinessTravel" />
	</view-state>

	<action-state id="clearingBusinessTravel">
		<evaluate expression="controllerVar.submit(clearingBusinessTravelVar)"
			result="flowScope.status" />
		<transition to="clearingBusinessTravelEnd" />
	</action-state>

	<end-state id="clearingBusinessTravelEnd" view="clearingBusinessTravelEnd.xhtml" />
</flow>
