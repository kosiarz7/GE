<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" start-state="candidateRequestView"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Zabezpieczenie flow przez Spring Security -->
	<secured
		attributes="ROLE_HR, ROLE_MANUFACTURE, ROLE_FINANCE, ROLE_SERVIS, ROLE_STOREHOUSE, ROLE_ROOT"
		match="any" />
		
	<var name="condidateRequestVar" class="gospodarka.elektroniczna.dto.hr.CandidateRequest" />
	<var name="controllerVar" class="gospodarka.elektroniczna.controllers.hr.CandidateRequestFlow" />
					
	<view-state id="candidateRequestView">
		<transition on="condidateRequest" to="condidateRequest" />
	</view-state>

	<action-state id="condidateRequest">
		<evaluate expression="controllerVar.submit(condidateRequestVar)"
			result="flowScope.status" />
		<transition to="condidateRequestEnd" />
	</action-state>

	<end-state id="condidateRequestEnd" view="candidateRequestEnd.xhtml" />
</flow>
