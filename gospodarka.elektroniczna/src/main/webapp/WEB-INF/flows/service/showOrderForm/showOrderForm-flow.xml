<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
        
    <!-- Zabezpieczenie flow przez Spring Security -->
    <secured attributes="ROLE_SERVIS, ROLE_STOREHOUSE" match="any"/>
        
    <var name="replacementPartOrderForm" class="gospodarka.elektroniczna.documents.service.ReplacementPartOrderForm" />
        
    <view-state id="showOrderFormView">
        <on-entry>
            <evaluate expression="serviceFlow.loadOrderForm()" result="flowScope.orderForm"/>
        </on-entry>
    </view-state>
        
    <bean-import resource="flow-beans.xml"/>

</flow>
