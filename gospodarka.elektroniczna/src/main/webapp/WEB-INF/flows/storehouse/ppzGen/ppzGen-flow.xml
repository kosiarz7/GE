<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" start-state="ppzGenView"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Zabezpieczenie flow przez Spring Security -->
<secured
		attributes="ROLE_HR, ROLE_MANUFACTURE, ROLE_FINANCE, ROLE_SERVIS, ROLE_STOREHOUSE, ROLE_ROOT"
		match="any" />

	<var name="ppzVar" class="gospodarka.elektroniczna.dto.storehouse.PPZDocument" />

	<view-state id="ppzGenView">
		<transition on="ppzGenA" to="ppzGen" />
	</view-state>

	<action-state id="ppzGen">
		<evaluate expression="controllerVar.submitPPZ(springSecurityContextUtilBean.getUser(), ppzVar)"
			result="flowScope.status" />
		<transition to="ppzGenEnd" />
	</action-state>

	<end-state id="ppzGenEnd" view="ppzGenEnd.xhtml" />
	<bean-import resource="flow-beans.xml" />
</flow>
