<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" start-state="poShowView"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Zabezpieczenie flow przez Spring Security -->
	<secured attributes="ROLE_STOREHOUSE, ROLE_MANUFACTURE" match="any" />

	<on-start>
		<evaluate expression="controllerVar.getPODocuments()"
			result="flowScope.podocuments" />
	</on-start>


	<view-state id="poShowView">
		<transition on="poShow" to="poShow" />
	</view-state>

	<bean-import resource="flow-beans.xml" />
</flow>
